---
interface Props {
  size?: number;
  class?: string;
}

const { size = 28, class: className } = Astro.props;
---

<div class:list={["archive-icon", className]}>
  <svg
    fill="none"
    height={size}
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    viewBox="0 0 24 24"
    width={size}
    xmlns="http://www.w3.org/2000/svg"
  >
    <rect class="archive-lid" height="5" rx="1" width="20" x="2" y="3" />
    <path class="archive-body" d="M4 8v11a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8" />
    <path class="archive-line" d="M10 12h4" />
  </svg>
</div>

<style>
  .archive-icon {
    display: inline-flex;
  }

  .archive-lid,
  .archive-body,
  .archive-line {
    transition: transform 0.2s ease;
  }

  .archive-icon:hover .archive-lid {
    animation: lid-lift 0.4s ease forwards;
  }

  .archive-icon:hover .archive-body {
    animation: body-shift 0.4s ease forwards;
  }

  .archive-icon:hover .archive-line {
    animation: line-shift 0.4s ease forwards;
  }

  @keyframes lid-lift {
    0% { transform: translateY(0); }
    100% { transform: translateY(-1.5px); }
  }

  @keyframes body-shift {
    0% { transform: translateY(0); }
    100% { transform: translateY(3px); }
  }

  @keyframes line-shift {
    0% { transform: translateY(0); }
    100% { transform: translateY(3px); }
  }
</style>
