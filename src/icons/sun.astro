---
interface Props {
  size?: number;
  class?: string;
}

const { size = 28, class: className } = Astro.props;
---

<svg
  fill="none"
  height={size}
  stroke="currentColor"
  stroke-linecap="round"
  stroke-linejoin="round"
  stroke-width="2"
  viewBox="0 0 24 24"
  width={size}
  xmlns="http://www.w3.org/2000/svg"
  class={className}
>
  <circle cx="12" cy="12" r="4"></circle>
  <path class="sun-ray sun-ray-1" d="M12 2v2"></path>
  <path class="sun-ray sun-ray-2" d="m19.07 4.93-1.41 1.41"></path>
  <path class="sun-ray sun-ray-3" d="M20 12h2"></path>
  <path class="sun-ray sun-ray-4" d="m17.66 17.66 1.41 1.41"></path>
  <path class="sun-ray sun-ray-5" d="M12 20v2"></path>
  <path class="sun-ray sun-ray-6" d="m6.34 17.66-1.41 1.41"></path>
  <path class="sun-ray sun-ray-7" d="M2 12h2"></path>
  <path class="sun-ray sun-ray-8" d="m4.93 4.93 1.41 1.41"></path>
</svg>

<style>
  .sun-icon {
    display: inline-flex;
  }

  .sun-ray {
    opacity: 1;
    transition: opacity 0.3s ease;
  }

  .sun-icon:hover .sun-ray {
    animation: ray-fade 0.3s ease both;
  }
  .sun-icon:hover .sun-ray-1 {
    animation-delay: 0.1s;
  }
  .sun-icon:hover .sun-ray-2 {
    animation-delay: 0.2s;
  }
  .sun-icon:hover .sun-ray-3 {
    animation-delay: 0.3s;
  }
  .sun-icon:hover .sun-ray-4 {
    animation-delay: 0.4s;
  }
  .sun-icon:hover .sun-ray-5 {
    animation-delay: 0.5s;
  }
  .sun-icon:hover .sun-ray-6 {
    animation-delay: 0.6s;
  }
  .sun-icon:hover .sun-ray-7 {
    animation-delay: 0.7s;
  }
  .sun-icon:hover .sun-ray-8 {
    animation-delay: 0.8s;
  }

  @keyframes ray-fade {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }
</style>
