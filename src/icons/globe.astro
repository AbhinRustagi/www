---
interface Props {
  size?: number;
  class?: string;
}

const { size = 28, class: className } = Astro.props;
---

<div class:list={["globe-icon", className]}>
  <svg
    fill="none"
    height={size}
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    viewBox="0 0 24 24"
    width={size}
    xmlns="http://www.w3.org/2000/svg"
  >
    <path class="globe-detail globe-detail-1" d="M21.54 15H17a2 2 0 0 0-2 2v4.54" pathLength="1" />
    <path class="globe-detail globe-detail-2" d="M7 3.34V5a3 3 0 0 0 3 3a2 2 0 0 1 2 2c0 1.1.9 2 2 2a2 2 0 0 0 2-2c0-1.1.9-2 2-2h3.17" pathLength="1" />
    <path class="globe-detail globe-detail-3" d="M11 21.95V18a2 2 0 0 0-2-2a2 2 0 0 1-2-2v-1a2 2 0 0 0-2-2H2.05" pathLength="1" />
    <circle class="globe-circle" cx="12" cy="12" r="10" pathLength="1" />
  </svg>
</div>

<style>
  .globe-icon {
    display: inline-flex;
  }

  .globe-circle,
  .globe-detail {
    stroke-dasharray: 1;
    stroke-dashoffset: 0;
    transition: stroke-dashoffset 0.3s ease, opacity 0.3s ease;
  }

  .globe-icon:hover .globe-circle {
    animation: draw-circle 0.3s ease 0.1s both;
  }

  .globe-icon:hover .globe-detail {
    animation: draw-detail 0.7s ease 0.5s both;
  }

  @keyframes draw-circle {
    0% { stroke-dashoffset: 1; opacity: 0; }
    100% { stroke-dashoffset: 0; opacity: 1; }
  }

  @keyframes draw-detail {
    0% { stroke-dashoffset: -1; opacity: 0; }
    100% { stroke-dashoffset: 0; opacity: 1; }
  }
</style>
