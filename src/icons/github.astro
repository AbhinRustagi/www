---
interface Props {
  size?: number;
  class?: string;
}

const { size = 28, class: className } = Astro.props;
---

<div class:list={["github-icon", className]}>
  <svg
    fill="none"
    height={size}
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    viewBox="0 0 24 24"
    width={size}
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      class="github-body"
      d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"
      pathLength="1"
    />
    <path
      class="github-tail"
      d="M9 18c-4.51 2-5-2-7-2"
      pathLength="1"
    />
  </svg>
</div>

<style>
  .github-icon {
    display: inline-flex;
  }

  .github-body {
    transform-origin: center;
    transition: transform 0.3s ease, opacity 0.3s ease;
  }

  .github-tail {
    transform-origin: 9px 18px;
    transition: transform 0.3s ease;
  }

  .github-icon:hover .github-body {
    animation: body-pop 0.4s ease forwards;
  }

  .github-icon:hover .github-tail {
    animation: tail-wag 1.5s ease-in-out 0.3s infinite;
  }

  @keyframes body-pop {
    0% { transform: scale(0.9); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }

  @keyframes tail-wag {
    0% { transform: rotate(0deg); }
    14% { transform: rotate(-15deg); }
    28% { transform: rotate(15deg); }
    42% { transform: rotate(-10deg); }
    57% { transform: rotate(10deg); }
    71% { transform: rotate(-5deg); }
    85% { transform: rotate(5deg); }
    100% { transform: rotate(0deg); }
  }
</style>
