---
interface Props {
  size?: number;
  class?: string;
}

const { size = 28, class: className } = Astro.props;
---

<div class:list={["square-pen-icon", className]}>
  <svg
    fill="none"
    height={size}
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    style="overflow: visible"
    viewBox="0 0 24 24"
    width={size}
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M12 3H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7" />
    <path class="pen-path" d="M18.375 2.625a1 1 0 0 1 3 3l-9.013 9.014a2 2 0 0 1-.853.505l-2.873.84a.5.5 0 0 1-.62-.62l.84-2.873a2 2 0 0 1 .506-.852z" />
  </svg>
</div>

<style>
  .square-pen-icon {
    display: inline-flex;
  }

  .pen-path {
    transform-origin: center;
    transition: transform 0.3s ease;
  }

  .square-pen-icon:hover .pen-path {
    animation: pen-wiggle 0.5s ease;
  }

  @keyframes pen-wiggle {
    0% { transform: rotate(0deg) translate(0, 0); }
    25% { transform: rotate(-0.5deg) translate(-1px, 1.5px); }
    50% { transform: rotate(0.5deg) translate(1.5px, -1px); }
    75% { transform: rotate(-0.5deg) translate(-0.5px, 0.5px); }
    100% { transform: rotate(0deg) translate(0, 0); }
  }
</style>
