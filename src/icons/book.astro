---
interface Props {
  size?: number;
  class?: string;
}

const { size = 28, class: className } = Astro.props;
---

<div class:list={["book-icon", className]}>
  <svg
    fill="none"
    height={size}
    stroke="currentColor"
    stroke-linecap="round"
    stroke-linejoin="round"
    stroke-width="2"
    viewBox="0 0 24 24"
    width={size}
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H19a1 1 0 0 1 1 1v18a1 1 0 0 1-1 1H6.5a1 1 0 0 1 0-5H20" />
    <path d="M8 11h8" />
    <path d="M8 7h6" />
  </svg>
</div>

<style>
  .book-icon {
    display: inline-flex;
  }

  .book-icon svg {
    transform-origin: center;
    transition: transform 0.3s ease;
  }

  .book-icon:hover svg {
    animation: book-wobble 0.6s ease-in-out;
  }

  @keyframes book-wobble {
    0% { transform: scale(1) rotate(0deg) translateY(0); }
    20% { transform: scale(1.04) rotate(-8deg) translateY(-2px); }
    50% { transform: scale(1.02) rotate(8deg) translateY(-1px); }
    80% { transform: scale(1.01) rotate(-8deg) translateY(0); }
    100% { transform: scale(1) rotate(0deg) translateY(0); }
  }
</style>
