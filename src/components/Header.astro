---
import ThemeToggle from "./ThemeToggle.astro";

const pathname = Astro.url.pathname;
---

<header class="border-dashed-y">
  <div class="header-content container border-dashed-x">
    <a href="/" class="nav-logo-wrapper">
      <div class="nav-logo-container">
        <img src="/avatar.jpg" alt="Abhin Rustagi Avatar" />
        <div class="header-left">
          <p class="logo">Abhin Rustagi</p>
          <p class="logo-subtitle">Software Engineer</p>
        </div>
      </div>
    </a>
    <nav>
      <a href="/blog" class:list={[{ active: pathname.startsWith("/blog") }]}
        >Writing</a
      >
      <a
        href="/projects"
        class:list={[{ active: pathname.startsWith("/projects") }]}>Projects</a
      >
      <a href="/work" class:list={[{ active: pathname.startsWith("/work") }]}
        >Work</a
      >
      <a href="/about" class:list={[{ active: pathname === "/about" }]}>About</a
      >
      <ThemeToggle />
    </nav>
  </div>
</header>

<style>
  header {
    background: var(--bg);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 16px;
    height: 100%;
    padding: var(--space-lg);
  }

  .nav-logo-wrapper {
    text-decoration: none;
  }

  .nav-logo-container {
    display: flex;
    gap: 16px;
    align-items: center;
  }

  .nav-logo-container > img {
    border-radius: 8px;
    width: 48px;
    height: 48px;
  }

  .logo {
    display: block;
    font-family: var(--font-sans);
    font-weight: 500;
    text-decoration: none;
    color: var(--text);
    font-size: 1.0625rem;
  }

  .logo:hover {
    color: var(--text);
  }

  .logo-subtitle {
    font-size: 0.9375rem;
    color: var(--text-muted);
    margin-bottom: 0;
  }

  nav {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  nav a {
    font-size: 0.9375rem;
    text-decoration: none;
    color: var(--text-muted);
    transition: color 0.2s ease;
  }

  nav a:hover,
  nav a.active {
    color: var(--text);
    text-decoration: underline dashed var(--text-muted) 1px;
    text-underline-offset: 3px;
  }

  @media (max-width: 640px) {
    nav {
      gap: var(--space-md);
    }

    nav a {
      font-size: 0.8125rem;
    }
  }
</style>
