---
import ThemeToggle from "./ThemeToggle.astro";

const pathname = Astro.url.pathname;
---

<header class="border-dashed-y">
  <div class="header-content container border-dashed-x">
    <div class="header-left">
      <a href="/" class="logo">Abhin Rustagi</a>
      <p class="logo-subtitle">Software Engineer</p>
    </div>
    <nav>
      <a href="/blog" class:list={[{ active: pathname.startsWith("/blog") }]}
        >Writing</a
      >
      <!-- <a href="/work" class:list={[{ active: pathname.startsWith('/work') }]}>Work</a> -->
      <a href="/about" class:list={[{ active: pathname === "/about" }]}>About</a
      >
      <ThemeToggle />
    </nav>
  </div>
</header>

<style>
  header {
    background: var(--bg);
    backdrop-filter: blur(8px);
    -webkit-backdrop-filter: blur(8px);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: 100%;
    padding: var(--space-lg);
  }

  .logo {
    display: block;
    font-family: var(--font-sans);
    font-weight: 500;
    text-decoration: none;
    color: var(--text);
    font-size: 1.125rem;
  }

  .logo:hover {
    color: var(--text);
  }

  .logo-subtitle {
    font-size: 0.9375rem;
    color: var(--text-muted);
    margin-bottom: 0;
  }

  nav {
    display: flex;
    align-items: center;
    gap: var(--space-lg);
  }

  nav a {
    font-size: 0.9375rem;
    text-decoration: none;
    color: var(--text-muted);
    transition: color 0.2s ease;
  }

  nav a:hover,
  nav a.active {
    color: var(--text);
  }

  @media (max-width: 640px) {
    nav {
      gap: var(--space-md);
    }

    nav a {
      font-size: 0.8125rem;
    }
  }
</style>
